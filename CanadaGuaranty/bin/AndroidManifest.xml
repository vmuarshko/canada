<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca1.canadaguaranty"
    android:versionCode="24"
    android:versionName="1.8" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CanadaGuaranty.Theme" >
        <activity
            android:name="ca1.canadaguaranty.SplashActivity"
            android:launchMode="standard"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca1.canadaguaranty.NewsListActivity"
            android:icon="@drawable/banner_news"
            android:label="@string/title_news"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.NewsDetailsActivity"
            android:icon="@drawable/banner_news"
            android:label="@string/title_news"
            android:launchMode="standard"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.CalculatorListActivity"
            android:icon="@drawable/banner_calc"
            android:label="@string/title_calculators"
            android:launchMode="standard" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.CalcPaymentActivity"
            android:icon="@drawable/banner_calc"
            android:label="@string/btn_mortgage_payment_calculator"
            android:launchMode="standard"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.CalcRentBuyActivity"
            android:icon="@drawable/banner_calc"
            android:label="@string/btn_rent_vs_buy_calculator"
            android:launchMode="standard"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.CalcRentBuyResultActivity"
            android:icon="@drawable/banner_calc"
            android:label="@string/btn_rent_vs_buy_calculator"
            android:launchMode="standard" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.ContactsActivity"
            android:icon="@drawable/banner_contact"
            android:label="@string/title_contacts"
            android:launchMode="standard" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.ProductListActivity"
            android:icon="@drawable/banner_products"
            android:label="@string/title_products"
            android:launchMode="standard" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.ProductDetailsActivity"
            android:icon="@drawable/banner_products"
            android:label="@string/title_products"
            android:launchMode="standard" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.ContactDetailsActivity"
            android:icon="@drawable/banner_contact"
            android:label="@string/contact_sales_team"
            android:launchMode="standard" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.NewsletterActivity"
            android:icon="@drawable/banner_email"
            android:label="@string/title_newsletter"
            android:launchMode="standard" >
        </activity>
        <activity
            android:name="ca1.canadaguaranty.CalcInsurancePremiumActivity"
            android:icon="@drawable/banner_calc"
            android:label="@string/title_insurance_premium_calc"
            android:launchMode="standard"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
    </application>

</manifest>