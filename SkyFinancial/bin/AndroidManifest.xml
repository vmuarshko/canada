<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skyfinancial1.canadamortgage"
    android:versionCode="9"
    android:versionName="1.1" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/SHTheme">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" android:launchMode="singleTop"></activity>
        <activity android:label="@string/label_office_address" android:name=".ContactListActivity"></activity>
        <activity android:label="@string/label_office_address" android:name=".ContactDetailsActivity"></activity>
        <activity android:label="@string/header_rates" android:launchMode="singleTop" android:name=".RatesActivity"></activity>
        <activity android:label="@string/header_news" android:name=".NewsListActivity"></activity>
        <activity android:label="@string/header_news" android:name=".NewsDetailsActivity"></activity>
        <activity android:windowSoftInputMode="stateVisible|adjustResize" android:name=".QuickAppActivity" android:label="@string/header_quick_application"></activity>
        <activity android:label="@string/header_calc_list" android:name=".CalcListActivity"></activity>
        <activity android:windowSoftInputMode="stateVisible|adjustResize" android:name=".CalcQualifierActivity" android:label="@string/header_motgage_qualifier"></activity>
        <activity android:name=".CalcPaymentActivity" android:windowSoftInputMode="stateVisible|adjustResize" android:label="@string/header_mortgage_payment"></activity>
        <activity android:name=".CalcRentBuyActivity" android:label="@string/header_rent_buy" android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity android:name=".CalcRentBuyResultActivity" android:label="@string/header_rent_buy"></activity>
    </application>

</manifest>