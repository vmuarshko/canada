<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jencor1.mortgage"
    android:versionCode="7"
    android:versionName="1.1" >

    <uses-sdk android:minSdkVersion="3" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/SHTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" android:launchMode="singleTop"></activity>
        <activity android:label="@string/label_office_address" android:name=".ContactListActivity" android:icon="@drawable/btn_contact"></activity>
        <activity android:label="@string/btn_contact_info" android:name=".ContactDetailsActivity" android:icon="@drawable/btn_contact"></activity>
        <activity android:label="@string/header_rates" android:launchMode="singleTop" android:name=".RatesActivity" android:icon="@drawable/btn_interest_rates"></activity>
        <activity android:label="@string/header_news" android:name=".NewsListActivity" android:icon="@drawable/btn_news"></activity>
        <activity android:label="@string/header_news" android:name=".NewsDetailsActivity" android:icon="@drawable/btn_news"></activity>
        <activity android:windowSoftInputMode="stateVisible|adjustResize" android:name=".QuickAppActivity" android:label="@string/btn_quick_app" android:icon="@drawable/btn_callback"></activity>
        <activity android:label="@string/btn_calc" android:name=".CalcListActivity" android:icon="@drawable/btn_calculator"></activity>
        <activity android:windowSoftInputMode="stateVisible|adjustResize" android:name=".CalcQualifierActivity" android:label="@string/calc_planning" android:icon="@drawable/calc_planning"></activity>
        <activity android:name=".CalcPaymentActivity" android:windowSoftInputMode="stateVisible|adjustResize" android:label="@string/calc_purchase" android:icon="@drawable/calc_purchase"></activity>
        <activity android:name=".CalcRentBuyActivity" android:label="@string/calc_rent_buy" android:windowSoftInputMode="stateVisible|adjustResize" android:icon="@drawable/calc_rent_buy"></activity>
        <activity android:name=".CalcRentBuyResultActivity" android:label="@string/calc_rent_buy" android:icon="@drawable/calc_rent_buy"></activity>
        <activity android:label="@string/btn_glossary" android:icon="@drawable/btn_glossary" android:name=".GlossaryActivity"></activity>
    </application>

</manifest>